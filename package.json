{
  "name": "playwright-min-network-mcp",
  "version": "0.1.0",
  "description": "Minimal network monitoring MCP tool for Playwright browser automation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "playwright-min-network-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "debug": "npm run build && chmod +x dist/index.js && npx @modelcontextprotocol/inspector dist/index.js",
    "test": "vitest --watch --reporter=verbose --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write ."
  },
  "keywords": [
    "mcp",
    "playwright",
    "network",
    "monitoring",
    "testing",
    "sdet"
  ],
  "author": "bun913",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.15.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "playwright": "^1.40.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
